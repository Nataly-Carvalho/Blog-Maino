<%- if controller_name != 'sessions' %>
  <div class="d-grid gap-2 mb-2">
    <%= link_to "Entrar", new_session_path(resource_name), class: "btn btn-secondary btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="d-grid gap-2 mb-2">
    <%= link_to "Cadastrar-se", new_registration_path(resource_name), class: "btn btn-secondary btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="d-grid gap-2 mb-2">
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "btn btn-link btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="d-grid gap-2 mb-2">
    <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), class: "btn btn-link btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="d-grid gap-2 mb-2">
    <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), class: "btn btn-link btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="d-grid gap-2 mb-2">
      <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
<% end %>
