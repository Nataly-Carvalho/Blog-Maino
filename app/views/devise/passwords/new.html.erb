<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mt-5">Esqueceu sua senha?</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-forgot-password" }) do |f| %>
          <%# Exibição de mensagens de erro %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="container">
            <div class="row justify-content-center">
              <div class="col-md-6">
                <%# Campo E-mail %>
                <div class="mb-3">
                  <%= f.label :email, "E-mail", class: "form-label" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu e-mail" %>
                </div>

                <%# Botão para enviar as instruções de redefinição de senha %>
                <div class="d-grid gap-2">
                  <%= f.submit "Enviar instruções para redefinir senha", class: "btn btn-primary btn-block" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
          <div class="row mt-5 justify-content-center">
            <div class="col-md-3 d-grid gap-2">
              <%= render "devise/shared/links" %>
            </div>
          </div>
    </div>
  </div>
</div>

