<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup" }) do |f| %>
  <%# Exibição de mensagens de erro %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center mt-5">Cadastro</h2>

        <%# Campo Nome %>
        <div class="mb-3">
          <%= f.label :name, "Nome", class: "form-label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Digite seu nome" %>
        </div>

        <%# Campo Foto de Perfil %>
        <div class="mb-3">
          <%= f.label :profile_pic, "Foto de perfil", class: "form-label" %>
          <%= f.file_field :profile_pic, class: "form-control" %>
        </div>

        <%# Campo E-mail %>
        <div class="mb-3">
          <%= f.label :email, "E-mail", class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Digite seu e-mail" %>
        </div>

        <%# Campo Senha %>
        <div class="mb-3">
          <%= f.label :password, "Senha", class: "form-label" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">
              (Mínimo de <%= @minimum_password_length %> caracteres)
            </small>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Crie uma senha" %>
        </div>

        <%# Campo Confirmar Senha %>
        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirme a senha", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirme sua senha" %>
        </div>

        <%# Botões de Ação %>
        <div class="row mt-5">
          <div class="col-md-6">
            <div class="d-grid gap-2">
              <%= f.submit "Cadastrar", class: "btn btn-primary btn-block" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="d-grid gap-2">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
<% end %>
